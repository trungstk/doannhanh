<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="#FDFFEA"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:id="@+id/layout_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ImageView_Product"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/img3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextView_NameProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/baloo2_semibold"
                    android:maxLines="1"
                    android:text="Tên sản phẩm"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/ImageView_Delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_clear" />
            </LinearLayout>


            <TextView
                android:id="@+id/TextView_Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo2_semibold"
                android:text="Kích cỡ"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextView_Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/baloo2_semibold"
                        android:maxLines="1"
                        android:text="200.000 Đ"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/TextView_Promotionalprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/baloo2_semibold"
                        android:maxLines="1"
                        android:text="200.000 Đ"
                        android:textColor="@color/color_orange"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:id="@+id/ImageView_MinusQuantity"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn1"
                            android:backgroundTint="@color/color_orange"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:src="@drawable/ic_minus"
                            android:textSize="30dp" />

                        <TextView
                            android:id="@+id/TextView_Amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:fontFamily="@font/baloo2_semibold"
                            android:text="1"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <ImageView
                            android:id="@+id/ImageView_AddAmount"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/btn1"
                            android:backgroundTint="@color/color_orange"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:src="@drawable/ic_plus"
                            android:textSize="30dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>