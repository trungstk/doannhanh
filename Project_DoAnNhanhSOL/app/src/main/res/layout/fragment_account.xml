<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_orange_nhat"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GUI.HomePage.AccountFragment">
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:layout_width="match_parent"
    android:id="@+id/SwipeRefreshLayoutAccount"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Thông tin cá nhân"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/btn"
                android:backgroundTint="@color/color_orange"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ImageView_Picture"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@color/cardview_dark_background"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TextView_Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo2_semibold"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/TextView_Email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo2_semibold"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/ImageView_EditAccount"
                    android:layout_width="25dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_edit" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/TextView_Order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/color_orange"
                    android:background="@drawable/btn1"
                    android:padding="10dp"
                    android:drawableStart="@drawable/ic_notes"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Đơn hàng"
                    android:drawablePadding="10dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/TextView_Spport"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Hỗ trợ"
                    android:drawableStart="@drawable/ic_customer_support__1_"
                    android:drawablePadding="10dp"
                    android:backgroundTint="@color/color_orange"
                    android:background="@drawable/btn1"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/TextView_SendFeedback"
                    android:layout_width="match_parent"
                    android:drawableStart="@drawable/ic_comment"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo2_semibold"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="10dp"
                    android:text="Gửi phản hồi"
                    android:backgroundTint="@color/color_orange"
                    android:background="@drawable/btn1"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/TextView_Logout"
                    android:layout_width="wrap_content"
                    android:background="@drawable/btn1"
                    android:backgroundTint="@color/color_orange"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/baloo2_semibold"
                    android:text="Đăng xuất"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/ic_log_out"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</FrameLayout>